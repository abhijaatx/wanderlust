<% layout("./layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <h1>SignUp on wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label"> Username</label>
                    <input name="username" placeholder="username" required type="text" class="form-control" />
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label"> Email</label>
                    <input name="email" placeholder="email" required type="email" class="form-control" />
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label"> Password</label>
                    <input name="password" placeholder="Password" required type="password" class="form-control" />
                    <div class="valid-feedback">Looks Good!</div>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>