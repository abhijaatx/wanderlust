<% layout("./layouts/boilerplate.ejs") %>
    <style>
        #filters {
            display: flex;
            flex-wrap: nowrap;
            justify-content: center;
        }

        .filter {
            text-align: center;
            margin-right: 2.5rem;
            margin-bottom: 1rem;
        }

        .filter:hover {
            opacity: 0.6;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8 rem;
        }

        .tax-info {
            display: none;


        }

        .form-check-reverse {
            margin-bottom: 2rem;

        }

        .d-flex {
            width: 25rem;
            height: 2rem;
        }

        .third {
            display: flex;
            justify-content: space-between;
        }

        .btn-search {
            color: white;
            background-color: rgb(255, 55, 55);
            text-align: center;
            border-radius: 1rem;
            text-decoration: solid;
        }

        .btn-search:hover {
            color: white;
            background-color: rgb(255, 55, 55);
            text-align: center;
            border-radius: 1rem;
            text-decoration: solid;
        }

        .me-2 {
            border-radius: 1rem;
        }
    </style>



    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>

        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>

        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castle</p>

        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p> Pools</p>

        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>

        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>

        </div>

    </div>
    <div class="third">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
        </div>
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
            <button class="btn btn-search" type="submit">Search</button>
        </form>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
        <% for(let listing of allListings) {%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card col">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%=listing.title%>
                            </b>
                            <br>
                        <p class="rent">&#8377; <%=listing.price%>/ night<i class="tax-info">&nbsp;+18% GST</i></p>

                        </p>
                    </div>
                </div>
            </a>

            <%}%>
    </div>

    <script>
        let tax = document.getElementById("switchCheckDefault");
        tax.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (info of taxInfo) {
                if (tax.checked) {
                    info.style.display = "inline";


                } else {
                    info.style.display = "none";
                }
            }
        });
    </script>